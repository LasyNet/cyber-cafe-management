# ========================================
# Configuration des Bases de Données
# ========================================

# Configuration PostgreSQL commune
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Service d'Authentification
AUTH_DB_NAME=auth_db
AUTH_DB_PORT=5432
AUTH_DB_HOST=localhost

# Service des Clients
CLIENTS_DB_NAME=clients_db
CLIENTS_DB_PORT=5433
CLIENTS_DB_HOST=localhost

# Service des Ordinateurs
COMPUTERS_DB_NAME=computers_db
COMPUTERS_DB_PORT=5434
COMPUTERS_DB_HOST=localhost

# Service des Sessions
SESSIONS_DB_NAME=sessions_db
SESSIONS_DB_PORT=5435
SESSIONS_DB_HOST=localhost

# Service de Reporting
REPORTING_DB_NAME=reporting_db
REPORTING_DB_PORT=5436
REPORTING_DB_HOST=localhost

# Configuration Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# Configuration des Services Backend
# ========================================

# Service d'Authentification
AUTH_SERVICE_PORT=8001
AUTH_SERVICE_HOST=localhost
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Service des Clients
CLIENTS_SERVICE_PORT=8002
CLIENTS_SERVICE_HOST=localhost

# Service des Ordinateurs
COMPUTERS_SERVICE_PORT=8003
COMPUTERS_SERVICE_HOST=localhost

# Service des Sessions
SESSIONS_SERVICE_PORT=8004
SESSIONS_SERVICE_HOST=localhost

# Service de Reporting
REPORTING_SERVICE_PORT=8005
REPORTING_SERVICE_HOST=localhost

# API Gateway
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=localhost

# ========================================
# Configuration Frontend
# ========================================

# Frontend React/Vue
FRONTEND_PORT=3000
FRONTEND_HOST=localhost
REACT_APP_API_URL=http://localhost:8000/api/v1

# ========================================
# Configuration de Sécurité
# ========================================

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# Configuration de Logging
# ========================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# Configuration de Monitoring
# ========================================

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ========================================
# Configuration de Développement
# ========================================

# Mode de développement
DEBUG=true
ENVIRONMENT=development

# Hot Reload
HOT_RELOAD_ENABLED=true

# ========================================
# Configuration Docker
# ========================================

# Nom du projet Docker
COMPOSE_PROJECT_NAME=cyber-cafe-management

# Réseau Docker
DOCKER_NETWORK_NAME=cyber_cafe_network

# Volumes de données
DATA_VOLUME_PATH=./temp_db_data 